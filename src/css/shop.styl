header
  width 100%
  background rgba(255,255,255,0.9)
  &.down
    position fixed
    left 0
    top 0
    z-index 500
  .navWarp
    width 100%
    height 40px
    background #f1f1f1
    line-height 40px
    .location
      float left
      margin-left 15px
      transition background 0.3s
      span
        font-weight bold
        color #000
      .toggleCity
        color #898989
      img
        vertical-align middle
      &:hover
        background #fff
    nav
      float right
      margin-right 15px
      height 100%
      a
        display inline-block
        height 100%
        color #121212
        font-weight bold
        padding 0 15px
        transition all 0.3s
        &.active
          color #e94840
          background #f1f1f1 !important
        &:hover
          background #fff
          color #e94840



  .searchLine
    position relative
    width 100%
    height 90px
    line-height 90px
    h1,.search
      float left
    h1
      margin 15px 0 0 15px
    .search
      margin 30px 0 0 55px
      i
        position absolute
        left 370px
        top 3px
      input
        float left
        width 475px
        height 31px
        outline none
        border 2px solid #e94840
        border-radius 5px 0 0 5px
        padding-left 40px
      input::-webkit-input-placeholder
              color: #aab2bd
              font-size: 14px
      button
        float left
        width 120px
        height 35px
        background #e94840
        color #fff
        outline none
        border none
        border-radius 0 5px 5px 0
    .code
      position absolute
      margin-right 15px
      right 0
      top 0
      width 90px
      height 90px
#content
  width 100%
  background #FBF8F8
  h2
    position absolute
    left 0
    font-weight bold
    font-size 18px
    line-height 85px
  #shopListWrap
    float left
    padding-top 90px
    width 970px
    ul
      width 100%
      li
        float left
        margin  0 10px 10px 0
        width 232px
        height 300px
        background #fff
        padding 8px
        border 1px solid #eaeaea
        box-sizing border-box
        &:hover
          box-shadow 5px 5px 15px #ccc
        a
          display block
          width 100%
          height 100%
          img
            width 210px
            height 210px
          .title
            display flex
            justify-content start
            margin-top 15px
            line-height 20px
            p
              font-size 16px
              font-weight 700
              color #000
            .home
              width 18px
              height 18px
              margin-right 5px
              vertical-align middle
          .footer
            display: flex
            justify-content space-between
            line-height 30px
            box-sizing border-box
            padding 0 3px
            span
             font-size 12px
             color #929292

  .enter
    margin-top 90px
    float right
    width 230px
    display flex
    flex-direction column
    justify-content start
    img
      width 230px
      height 300px
    .App
      margin-top 10px

footer
  .safeguard
    margin-top 60px
    font-family: "微软雅黑"
    text-align center
    h2
      font-size: 30px
      font-weight: 800
      span
        color #fb474f
        font-weight: 800
    p
      color #3d3838
      font-size 22px
      margin-top 15px
    ul
      display flex
      justify-content center
      margin-top 15px
      li
        margin-right 15px



  .city
    position relative
    margin-top 70px
    h3
      position absolute
      left 0
      top 0
      font-family: " 微软雅黑";
      font-size: 18px;
      font-weight bold
      margin-top 8px
    ul
      margin-left 70px
      display flex
      flex-wrap wrap
      li
        width 100px
        height 30px
        margin-top 5px
        a
          display block
          width 100%
          height 100%
          color #898989
          font-size 18px
          font-weight 200
          font-family "微软雅黑"
          text-align center
          line-height 30px
  .copyright
    color #898989
    margin 20px 0 10px 0
    font-size 14px
